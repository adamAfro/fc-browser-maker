{
    "manifest_version": 2,
    "name": "Wordsummary",
    "version": "1.0",
    "description": "Makes summary of words on a website",
    "permissions": ["activeTab"],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [ { 
        "matches": ["<all_urls>"], 
        "js": [ "content.js" ] 
    }],

    "browser_action": {
        "default_title": "Summarize",
        "default_icon": "icons/cloud-32.png"
    }
}