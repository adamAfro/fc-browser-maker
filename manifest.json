{
    "manifest_version": 2,
    "name": "Wordcloud",
    "version": "1.0",
    "description": "Makes cloud of words (wordcloud) on a website after performing basic summary of them",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "index.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Highlight",
        "default_icon": "icons/cloud-32.png"
    }
}